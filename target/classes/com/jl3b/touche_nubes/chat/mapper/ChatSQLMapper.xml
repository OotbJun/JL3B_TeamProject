<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jl3b.touche_nubes.chat.mapper.ChatSQLMapper">

	<!-- 채팅 입력 -->
	<insert id="insertChat">
		<![CDATA[
			INSERT INTO JL3B_CHAT VALUES(JL3B_CHAT_SEQ.NEXTVAL, #{member_no}, #{chat_content}, SYSDATE)
		]]>
	</insert>
	
	<!-- 채팅 출력 -->
	<select id="selectChat" resultType="com.jl3b.touche_nubes.chatvo.ChatVo">
		<![CDATA[
			SELECT * FROM JL3B_CHAT WHERE CHAT_NO >= #{chat_no}
		]]>
	</select>
	
	<!-- 채팅방 입장 -->
	<insert id="enterChat">
		<![CDATA[
			INSERT INTO JL3B_CHAT 
			VALUES(
				JL3B_CHAT_SEQ.NEXTVAL, 
				#{member_no}, 
				'입장하셨습니다.', 
				SYSDATE
			)
		]]>
	</insert>

</mapper>